<%= render "shared/navbar" %>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  h1 {
    font-size: 24px;
    text-align: center;
    margin-bottom: 20px;
  }

  form {
    width: 100%;
  }

  .field {
    margin-bottom: 20px;
  }

  label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .form-control {
    width: calc(100% - 24px);
    padding: 10px 12px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    outline: none;
    border-color: DeepSkyBlue;
  }

  .error-message {
    color: red;
    font-size: 12px;
    margin-top: 5px;
  }

  .actions {
    text-align: center;
  }

  .btn {
    padding: 12px 24px;
    background-color: DeepSkyBlue;
    border: none;
    color: white;
    text-decoration: none;
    display: inline-block;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #1E90FF;
  }

  .btn-secondary {
    background-color: #6c757d;
    margin-right: 10px;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .btn-back {
    text-decoration: none;
    color: #333;
    font-size: 14px;
    margin-top: 10px;
    display: inline-block;
    transition: color 0.3s ease;
  }

  .btn-back:hover {
    color: #007bff;
  }
</style>

<div class="container">
  <h1>Novo Usuário</h1>

  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "Nome" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :phone_number, "Telefone" %>
      <%= form.text_field :phone_number, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :bio, "Produtos" %>
      <%= form.text_area :bio, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Criar Usuário', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', users_path, class: 'btn' %>
</div>
