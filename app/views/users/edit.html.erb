<%= render "shared/navbar" %>

<style>
  .content {
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ccc;
    background-color: #f9f9f9;
    border-radius: 15px;
    text-align: center;
  }

  .content h1 {
    margin-bottom: 20px;
    font-size: 24px;
  }

  .form-container {
    max-width: 400px;
    margin: 0 auto;
    text-align: left;
  }

  .form-field {
    margin-bottom: 20px;
  }


  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }


  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease;
  }

  .form-control:focus {
    outline: none;
    border-color: DeepSkyBlue;
  }

  .btn {
    padding: 10px 16px;
    background-color: DeepSkyBlue;
    border: none;
    color: white;
    text-decoration: none;
    display: inline-block;
    margin-right: 10px;
    margin-bottom: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease, border-color 0.3s ease;
    border-radius: 5px;
  }

  .btn:hover {
    background-color: #4169E1;
    border-color: #4169E1;
  }

  .btn-update {
    color: white;
  }
</style>

<div class="content">
  <h1>Editar Usuário</h1>

  <%= form_with(model: @user, local: true, html: { class: 'form-container' }) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= form.label :nome, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-field">
      <%= form.label :telefone, class: 'form-label' %>
      <%= form.text_field :phone_number, class: 'form-control' %>
    </div>

    <div class="form-field">
      <%= form.label :bio, "Produtos", class: 'form-label' %>
      <%= form.text_area :bio, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit 'Atualizar Informações', class: 'btn btn-primary btn-update' %>
      <%= link_to 'Mostrar', @user, class: 'btn' %>
      <%= link_to 'Voltar', users_path, class: 'btn' %>
    </div>
  <% end %>
</div>
